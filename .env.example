# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_GPT4=gpt-4o-mini
AZURE_OPENAI_DEPLOYMENT_GPT35=gpt-35-turbo
AZURE_OPENAI_DEPLOYMENT_GPT4OMINI=gpt-4o-mini

# For backward compatibility with existing code
GPT4_URL=https://your-endpoint.openai.azure.com/openai/deployments/gpt-4o-mini/chat/completions?api-version=2024-02-15-preview
GPT4_KEY=your-azure-openai-key

# Cosmos DB Configuration (for production)
COSMOS_ENDPOINT=https://your-cosmos-endpoint.documents.azure.com:443/
COSMOS_DB_NAME=llm-judge-db
COSMOS_JUDGE_TABLE=judges
COSMOS_ASSEMBLY_TABLE=assemblies

# Local Development (SQLite fallback)
USE_LOCAL_DB=true
LOCAL_DB_PATH=./local_db.json

# Blob Storage (optional)
BLOB_CONNECTION_STRING=your-blob-connection-string

# Monitoring (optional)
AZ_CONNECTION_LOG=your-monitoring-connection-string

# Development Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
